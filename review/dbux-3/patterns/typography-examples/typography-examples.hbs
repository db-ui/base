<main>
	<h1>Typography Examples</h1>

	<p>All text-sizes are inherited by the scale placeholder (functional) from body tag!</p>

	<db-tab-bar>
		<db-tab label="Headlines black" name="tab-bar" active>
			<h1>Headline 1</h1>
			<h2>Headline 2</h2>
			<h3>Headline 3</h3>
			<h4>Headline 4</h4>
			<h5>Headline 5</h5>
			<h6>Headline 6</h6>
		</db-tab>
		<db-tab label="Headlines light" name="tab-bar" active>
			<h1 data-variant="light">Headline 1</h1>
			<h2 data-variant="light">Headline 2</h2>
			<h3 data-variant="light">Headline 3</h3>
			<h4 data-variant="light">Headline 4</h4>
			<h5 data-variant="light">Headline 5</h5>
			<h6 data-variant="light">Headline 6</h6>
		</db-tab>
		<db-tab label="Body" name="tab-bar">
			<p>Primary font: "DB Screen Sans", "Helvetica", "Arial", sans-serif;</p>
			<p><em>Primary font italic: "DB Screen Sans", "Helvetica", "Arial", sans-serif;</em></p>
			<p><strong>Primary font bold: "DB Screen Sans", "Helvetica", "Arial", sans-serif;</strong></p>
		</db-tab>
	</db-tab-bar>

</main>
